feature cv96 {

  cvParameters {
    FeatUILabelNameID {
      name "CV96: Full width quotes";
    };
  };

  sub quotedblleft by quotedblleft.full;
  sub quotedblright by quotedblright.full;
  sub quoteleft by quoteleft.full;
  sub quoteright by quoteright.full;

